{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react-jsx",
    "module": "ESNext",
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src"  // 添加这行确保正确的输出结构
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}